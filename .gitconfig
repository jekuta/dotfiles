[color]
	ui = true
[user]
	name = Laura Paakkinen
	email = laura.paakkinen@u2i.com
[core]
        editor = vim
	autocrlf = input
	safecrlf = true
	excludesfile = ~/.gitignore_global
[diff]
        tool = vimdiff
[difftool]
        prompt = false
[merge]
        tool = vimdiff
[mergetool]
        prompt = false
        keepBackup = false
[alias]
        co = checkout
        ci = commit
        st = status
        br = branch
        hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
        type = cat-file -t
        dump = cat-file -p
[credential]
	helper = osxkeychain
[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    versiontag = v
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
